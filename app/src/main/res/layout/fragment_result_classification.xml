<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/surfaceContainerLowest"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/r6e3x79hk6fw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/surfaceContainerLowest"
        android:paddingTop="31dp"
        android:paddingHorizontal="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rtb2qspe6pb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="37dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/r0kkava0t1q"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_marginEnd="88dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/ry7h31v726u"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Prediksi_Penyakit"
                    android:textColor="@color/shadow"
                    android:textSize="@dimen/fontsize_body_large"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rhuugz2wsb1h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/s000000sw1cr16beeeeee"
                android:layout_marginBottom="27dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rqh92xtum1dj"
                    android:layout_width="match_parent"
                    android:layout_height="297dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/sample" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r20gvhic8yhp"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:background="@drawable/cr20b66a90f"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:id="@+id/TvNamaPenyakit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit kresek"
                    android:textStyle="bold"
                    android:textColor="@color/surfaceContainerLowest"
                    android:textSize="@dimen/fontsize_body_medium" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/r23r8bwtwma"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="@drawable/s000000sw1cr20"
                android:orientation="vertical"
                android:paddingHorizontal="13dp"
                android:paddingTop="16dp"
                android:paddingBottom="51dp">

                <TextView
                    android:id="@+id/ru3lx4ysr18g"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Lorem ipsum dolor sit amet, consectetur\nadipiscing elit. Fusce bibendum eleifend\nsemper. Maecenas sit amet lectus\nefficitur, ornare mauris sed, porttitor velit.\nEtiam nec purus justo."
                    android:textColor="@color/shadow"
                    android:textSize="@dimen/fontsize_body_medium" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
