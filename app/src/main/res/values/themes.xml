<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TaniCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna Utama -->
        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Warna Latar -->
        <item name="android:colorBackground">@color/background1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Warna Teks -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.TaniCare" parent="Base.Theme.TaniCare" />

    <!-- Bold Text Style with black color -->
    <style name="bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Semibold Text Style with black color -->
    <style name="semibold">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Medium Text Style with black color -->
    <style name="medium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Light Text Style with black color -->
    <style name="light">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>